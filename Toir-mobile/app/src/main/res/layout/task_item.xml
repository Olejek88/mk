<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/ti_ImageStatus"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="6dip"
        android:src="@drawable/status_easy_receive"
        android:contentDescription="@string/image_description" />

    <TextView
        android:id="@+id/ti_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/ti_ImageStatus"
        android:background="#FAFAFA"
        android:textColor="#454545"
        android:gravity="center_vertical"
        android:text="@string/description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ti_Equipment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ti_ImageStatus"
        android:background="#FAFAFA"
        android:textColor="#454545"
        android:layout_below="@+id/ti_Name"
        android:ellipsize="marquee"
        android:text="@string/description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ti_Status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ti_ImageStatus"
        android:background="#FAFAFA"
        android:textColor="#454545"
        android:layout_below="@+id/ti_Equipment"
        android:ellipsize="marquee"
        android:text="@string/description"
        android:textSize="12sp" />

</RelativeLayout>