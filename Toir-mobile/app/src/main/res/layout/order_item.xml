<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <ImageView
        android:id="@+id/order_ImageStatus"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginEnd="6dip"
        android:contentDescription="@string/image_description"
        android:src="@drawable/status_easy_receive" />

    <TextView
        android:id="@+id/order_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginEnd="20dip"
        android:layout_toEndOf="@id/order_ImageStatus"
        android:background="@color/larisaTextColorAWhite"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/description"
        android:textColor="#454545"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_Create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/order_Name"
        android:layout_marginTop="5dip"
        android:layout_toEndOf="@id/order_ImageStatus"
        android:background="@color/larisaTextColorAWhite"
        android:ellipsize="marquee"
        android:text="@string/description"
        android:textColor="#454545"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/order_Name"
        android:layout_marginEnd="20dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="5dip"
        android:layout_toEndOf="@id/order_Create"
        android:background="@color/larisaTextColorAWhite"
        android:ellipsize="marquee"
        android:text="@string/description"
        android:textColor="#454545"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/menu_options"
        android:textAppearance="?android:textAppearanceLarge" />

</RelativeLayout>