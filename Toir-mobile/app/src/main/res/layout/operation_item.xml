<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/operation_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <RelativeLayout
        android:id="@+id/operation_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/operation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/operation_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/operation_title"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/operation_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/operation_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/operation_startDate"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/operation_verdict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/image_description"
        android:src="@drawable/status_high_ready" />

</LinearLayout>
