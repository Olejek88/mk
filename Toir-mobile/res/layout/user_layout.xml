<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/black" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="200"
                android:ems="10"
                android:minHeight="20dp"
                android:text="Информация о пользователе"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button1"
                style="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:minHeight="20dp"
                android:minWidth="54dip"
                android:text="Сервис"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button3"
                android:minHeight="20dp"
                android:text="Помощь"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/p1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TableRow
                                android:id="@+id/TableRow03"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@color/black"
                                android:paddingTop="1dp" >

                                <ImageView
                                    android:id="@+id/ImageView03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/checkmark_32" />

                                <EditText
                                    android:id="@+id/EditText03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:text="Статус текущего наряда: выполнен 21-12-2014 05:16"
                                    android:textSize="12sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/TableRow02"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@color/black"
                                android:paddingTop="1dp" >

                                <ImageView
                                    android:id="@+id/ImageView02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/forbidden_32" />

                                <EditText
                                    android:id="@+id/EditText02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="1dp"
                                    android:text="Предпоследний наряд: отменен 20-12-2014 02:26"
                                    android:textSize="12sp" />

                            </TableRow>

                            <TableRow
                                android:id="@+id/TableRow01"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@color/black" >

                                <ImageView
                                    android:id="@+id/ImageView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/information_32" />

                                <EditText
                                    android:id="@+id/EditText01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="1dp"
                                    android:text="По наряду есть комментарии: выполнен 19-12-2014 01:16"
                                    android:textSize="12sp" />

                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow13"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@color/black" >

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/checkmark_32" />

                                <EditText
                                    android:id="@+id/editText5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:paddingTop="1dp"
                                    android:text="Старый наряд: выполнен 11-12-2014 05:16"
                                    android:textSize="12sp" />

                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                </TableRow>
            </TableLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1" >

                    <TableRow
                        android:id="@+id/TableRow07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:gravity="top" >

                        <EditText
                            android:id="@+id/EditText07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="ID: 1212121212"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/TableRow06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/black"
                        android:gravity="top" >

                        <EditText
                            android:id="@+id/EditText06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="ФИО: Иванов О.А."
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/TableRow05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:gravity="top" >

                        <EditText
                            android:id="@+id/EditText05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="Должность: Ведущий инженер"
                            android:textAllCaps="false"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/TableRow04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/black"
                        android:gravity="top" >

                        <EditText
                            android:id="@+id/EditText04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="Текущий статус: задание"
                            android:textAllCaps="false"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/black"
                        android:gravity="top" >

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="Время: 2 часа 21 минута"
                            android:textAllCaps="false"
                            android:textSize="12sp" />

                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black" >

                        <EditText
                            android:id="@+id/editText6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:text="Текущие координаты:"
                            android:textSize="12sp" >

                            <requestFocus />
                        </EditText>

                        <EditText
                            android:id="@+id/editText7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text="66.55.44 з.д.-55.44.22"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black" >

                        <EditText
                            android:id="@+id/EditText08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:ems="10"
                            android:text="Текущий статус:"
                            android:textAllCaps="false"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/editText8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text="задание"
                            android:textSize="12sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </TableRow>

    </TableLayout>
</RelativeLayout>
